<div class="row">
  <h1>Teaching Materials</h1>

  <% @materials.each_slice(3) do |row| %>
  <div class="row">
    <% row.each do |material| %>
    <div class="medium-6 large-4 columns end">
      <%= render material %>
    </div>
    <% end %>
  </div>
  <% end %>

  <%= paginate @materials %>
</div>

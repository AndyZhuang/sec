<!DOCTYPE html>
<html>
  <head>
    <title>TrainersHub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      Logo + Title
    </header>

    <% if breadcrumbs.present? %>
      <div id="breadcrumbs">
        <% breadcrumbs.each_with_index do |page, i| %>
          <%= '>' unless i.zero? %>
          <span class="crumb"><%= link_to page[0], page[1] %></span>
        <% end %>
      </div>
    <% end %>

    <div id="main-content">
      <%= yield %>
    </div>

    <footer>
      Footer
    </footer>
  </body>
</html>

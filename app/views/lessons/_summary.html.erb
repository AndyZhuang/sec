<% if lesson.duration.length > 0 %>
  <div class="duration">
    Duration: <%= lesson.duration.in_words %>
  </div>
<% end %>

<% if lesson.objective? %>
  <div class="objective">
    <h2>Learning Objectives</h2>
    <div class="content">
      <%= lesson.objective.html_safe %>
    </div>
  </div>
<% end %>

<div class="topic card">
  <h3><%= link_to topic.name, topic %></h3>
  <div class="duration">Duration: <%= duration_in_words(topic.lessons.first) %></div>
  <div class="levels"><%= difficulty_tag(topic.lessons.map(&:level_id)) %></div>
  <div class="description"><% topic.description %></div>
  <div class="tags"><%= tags(topic, :topics_path) %></div>
  <div class="duration"><%= topic.duration.in_words %></div>
</div>
